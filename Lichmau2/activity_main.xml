<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/table"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:stretchColumns="*"
    android:background="#000">
    <TableRow>
        <TextView
            android:id="@+id/nam"
            android:layout_span="8"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:fontFamily="sans-serif"
            android:textColor="@android:color/holo_blue_bright"
            android:text="NĂM 2017"
            />
    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/thang"
            android:layout_span="8"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:fontFamily="sans-serif"
            android:textColor="@android:color/holo_blue_bright"
            android:text="THÁNG 1"
            />
    </TableRow>
    <TableRow
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        >
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/linear"
            android:layout_span="4"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/thu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:fontFamily="sans-serif"
                android:layout_span="4"
                android:textColor="@android:color/holo_blue_bright"
                android:text="CHỦ NHẬT" />
            <TextView
                android:id="@+id/thuso"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_span="4"
                android:fontFamily="sans-serif"
                android:textColor="@android:color/holo_blue_bright"
                android:text="1" />
            <TextView
                android:id="@+id/note"
                android:textSize="10sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:textColor="@android:color/holo_blue_bright"
                android:text="NOTE"/>
            <EditText
                android:id="@+id/ghichutext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="12sp"
                android:layout_span="4"
                android:textStyle="bold"
                android:textAlignment="center"
                android:fontFamily="sans-serif"
                android:textColor="@android:color/holo_blue_bright"
                />
        </LinearLayout>
        <ImageView
            android:id="@+id/hinhanh"
            android:src="@drawable/i1"
            android:layout_span="4"
            android:layout_height="120sp"
            android:layout_width="120sp"
            />
    </TableRow>
    <TableRow
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        >
        <TextView
            android:id="@+id/caunoi"
            android:layout_span="8"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:fontFamily="sans-serif"
            android:textColor="@android:color/holo_blue_bright"
            android:text="HAPPY NEW YEAR"
            />
    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/tacgia"
            android:layout_span="8"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:fontFamily="sans-serif"
            android:textColor="@android:color/holo_blue_bright"
            android:text=""
            />
    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/chitiet"
            android:layout_span="2"
            android:textSize="10sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textColor="@android:color/holo_blue_bright"
            />
        <TextView
            android:id="@+id/amlich"
            android:layout_span="4"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:fontFamily="sans-serif"
            android:textColor="@android:color/holo_blue_bright"
            android:text="THÁNG 12"
            />
        <TextView
            android:id="@+id/hoangdao"
            android:layout_span="2"
            android:textSize="10sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textColor="@android:color/holo_blue_bright"
            />
    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/amlichngay"
            android:layout_span="8"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:fontFamily="sans-serif"
            android:textColor="@android:color/holo_blue_bright"
            android:text="4"
            />
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/truoc"
            android:layout_span="2"
            android:textSize="10sp"
            android:text="Trước"

            />
        <Button
            android:id="@+id/sau"
            android:layout_span="2"
            android:textSize="10sp"
            android:text="Sau"
            />
        <EditText
            android:id="@+id/nhapthang"
            android:layout_span="1"
            android:textSize="10sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textColor="@android:color/holo_blue_bright"
            android:textColorHighlight="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Tháng"

            />
        <EditText
            android:id="@+id/nhapngay"
            android:layout_span="1"
            android:textSize="10sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textColor="@android:color/holo_blue_bright"
            android:hint="Ngày"
            android:textColorHighlight="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <Button
            android:id="@+id/tim"
            android:layout_span="2"
            android:textSize="10sp"
            android:text="Tìm"
            />
    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/page"
            android:layout_span="8"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:fontFamily="sans-serif"
            android:textColor="@android:color/holo_blue_bright"
            android:text="0"
            />
    </TableRow>
    </TableLayout>


