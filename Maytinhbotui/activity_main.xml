<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/table"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:stretchColumns="*"
    android:background="#000">

    <TableRow
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        >

        <EditText
            android:id="@+id/kq"
            android:layout_span="6"
            android:textSize="30dp"
            android:layout_weight="1"
            android:textColor="#FFF"
            android:gravity="right"

            />
    </TableRow>

    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        >
        <Button
            android:id="@+id/MC"
            android:layout_height="50sp"
            android:layout_width="50sp"
            android:textSize="20sp"
            android:text="MC"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/MR"
            android:layout_height="50sp"
            android:layout_width="50sp"
            android:textSize="20sp"
            android:text="MR"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/MCong"
            android:layout_height="50sp"
            android:layout_width="50sp"
            android:textSize="20sp"
            android:text="M+"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/MTru"
            android:layout_height="50sp"
            android:layout_width="50sp"
            android:textSize="20sp"
            android:text="M-"
            android:layout_weight="1"
            />



    </TableRow>

    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        >
        <Button
            android:id="@+id/phantram"
            android:layout_height="50sp"
            android:layout_width="50sp"
            android:textSize="20sp"
            android:layout_weight="1"
            android:text="%"

            />
        <Button
            android:id="@+id/canbachai"
            android:layout_height="50sp"
            android:layout_width="50sp"
            android:textSize="20sp"
            android:layout_weight="1"
            android:text="√"
            />
        <Button
            android:id="@+id/binhphuong"
            android:layout_height="50sp"
            android:layout_width="50sp"
            android:textSize="20sp"
            android:layout_weight="1"
            android:text="x^2"
            />
        <Button
            android:id="@+id/nghichdao"
            android:layout_height="50sp"
            android:layout_width="50sp"
            android:textSize="20sp"
            android:layout_weight="1"
            android:text="1/x"
            />
    </TableRow>

    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        >
        <Button
            android:id="@+id/CE"
            android:layout_height="50sp"
            android:layout_width="50sp"
            android:textSize="20sp"
            android:layout_weight="1"
            android:text="CE"
            />
        <Button
            android:id="@+id/C"
            android:layout_height="50sp"
            android:layout_width="50sp"
            android:textSize="20sp"
            android:layout_weight="1"
            android:text="C"
            />
        <Button
            android:id="@+id/xoa"
            android:layout_height="50sp"
            android:layout_width="50sp"
            android:textSize="20sp"
            android:layout_weight="1"
            android:text="DEL"
            />
        <Button
            android:id="@+id/chia"
            android:layout_height="50sp"
            android:layout_width="50sp"
            android:textSize="20sp"
            android:layout_weight="1"
            android:text=":"
            />
    </TableRow>

    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        >

        <Button
            android:id="@+id/so7"
            android:layout_weight="1"
            android:layout_height="50sp"
            android:layout_width="50sp"
            android:textSize="20sp"
            android:text="7"
            />

        <Button
            android:id="@+id/so8"
            android:layout_weight="1"
            android:layout_height="50sp"
            android:layout_width="50sp"
            android:textSize="20sp"
            android:text="8"
            />
        <Button
            android:id="@+id/so9"
            android:layout_weight="1"
            android:layout_height="50sp"
            android:layout_width="50sp"
            android:textSize="20sp"
            android:text="9"
            />
        <Button
            android:id="@+id/nhan"
            android:layout_weight="1"
            android:layout_height="50sp"
            android:layout_width="50sp"
            android:textSize="20sp"
            android:text="x"
            />
    </TableRow>

    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        >
        <Button
            android:id="@+id/so4"
            android:layout_weight="1"
            android:layout_height="50sp"
            android:layout_width="50sp"
            android:textSize="20sp"
            android:text="4"
            />
        <Button
            android:id="@+id/so5"
            android:layout_weight="1"
            android:layout_height="50sp"
            android:layout_width="50sp"
            android:textSize="20sp"
            android:text="5"
            />
        <Button
            android:id="@+id/so6"
            android:layout_weight="1"
            android:layout_height="50sp"
            android:layout_width="50sp"
            android:textSize="20sp"
            android:text="6"
            />
        <Button
            android:id="@+id/tru"
            android:layout_weight="1"
            android:layout_height="50sp"
            android:layout_width="50sp"
            android:textSize="20sp"
            android:text="-"
            />
    </TableRow>

    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        >

        <Button
            android:id="@+id/so1"
            android:layout_weight="1"
            android:layout_height="50sp"
            android:layout_width="50sp"
            android:textSize="20sp"
            android:text="1"
            />

        <Button
            android:id="@+id/so2"
            android:layout_weight="1"
            android:layout_height="50sp"
            android:layout_width="50sp"
            android:textSize="20sp"
            android:text="2"
            />
        <Button
            android:id="@+id/so3"
            android:layout_weight="1"
            android:layout_height="50sp"
            android:layout_width="50sp"
            android:textSize="20sp"
            android:text="3"
            />
        <Button
            android:id="@+id/cong"
            android:layout_weight="1"
            android:layout_height="50sp"
            android:layout_width="50sp"
            android:textSize="20sp"
            android:text="+"
            />
    </TableRow>

    <TableRow
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        >
        <Button
            android:id="@+id/congtru"
            android:layout_weight="1"
            android:layout_height="50sp"
            android:layout_width="50sp"
            android:textSize="20sp"
            android:text="±"
            />
        <Button
            android:id="@+id/so0"
            android:layout_weight="1"
            android:layout_height="50sp"
            android:layout_width="50sp"
            android:textSize="20sp"
            android:text="0"
            />
        <Button
            android:id="@+id/cham"
            android:layout_weight="1"
            android:layout_height="50sp"
            android:layout_width="50sp"
            android:textSize="20sp"
            android:text="."
            />
        <Button
            android:id="@+id/bang"
            android:layout_weight="1"
            android:layout_height="50sp"
            android:layout_width="50sp"
            android:textSize="20sp"
            android:text="="
            />
    </TableRow>

</TableLayout>