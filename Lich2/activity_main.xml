<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/table"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:stretchColumns="*"
    android:background="#000">
    <TableRow
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        >
        <TextView
            android:id="@+id/thang"
            android:layout_span="2"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:fontFamily="sans-serif"
            android:textColor="@android:color/holo_green_dark"
            android:text="THÁNG"
            />

        <TextView
            android:id="@+id/thu"
            android:layout_span="4"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:fontFamily="sans-serif"
            android:textColor="@android:color/holo_green_dark"
            android:text="CHỦ NHẬT"
            />

        <TextView
            android:id="@+id/nam"
            android:layout_span="2"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:fontFamily="sans-serif"
            android:textColor="@android:color/holo_green_dark"
            android:text="NĂM"
            />
    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/thangso"
            android:layout_span="2"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:fontFamily="sans-serif"
            android:textColor="@android:color/holo_green_dark"
            android:text="1"
            />

        <TextView
            android:id="@+id/thungay"
            android:layout_span="4"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:fontFamily="sans-serif"
            android:textColor="@android:color/holo_green_dark"
            android:text="1"
            />
        <TextView
            android:id="@+id/namso"
            android:layout_span="2"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:fontFamily="sans-serif"
            android:textColor="@android:color/holo_green_dark"
            android:text="2017"
            />
    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/hinhanhtd"
            android:layout_span="4"
            />
        <TextView
            android:id="@+id/ghichu"
            android:layout_span="2"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:fontFamily="sans-serif"
            android:textColor="@android:color/holo_green_dark"
            android:text="NOTE"
            />
        <Button
            android:id="@+id/luu"
            android:layout_span="2"
            android:text="Lưu"
            />
    </TableRow>

    <TableRow
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        >
        <ImageView
            android:id="@+id/hinhanh"
            android:layout_span="5"
            android:src="@drawable/i1"
            android:layout_height="120sp"
            android:layout_width="120sp"
            />


            <EditText
                android:id="@+id/ghichutext"
                android:layout_span="3"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:fontFamily="sans-serif"
                android:textColor="@android:color/holo_green_dark"

            />
    </TableRow>

    <TableRow
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        >
        <TextView
            android:id="@+id/caunoi"
            android:layout_span="8"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:fontFamily="sans-serif"
            android:textColor="@android:color/holo_green_dark"
            android:text="HAPPY NEW YEAR"
            />
    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/tacgia"
            android:layout_span="8"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:fontFamily="sans-serif"
            android:textColor="@android:color/holo_green_dark"
            android:text=""
            />
    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/chitiet"
            android:layout_span="2"
            android:textSize="10sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textColor="@android:color/holo_green_dark"
            />
        <TextView
            android:id="@+id/amlich"
            android:layout_span="4"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:fontFamily="sans-serif"
            android:textColor="@android:color/holo_green_dark"
            android:text="THÁNG 12"
            />
        <TextView
            android:id="@+id/hoangdao"
            android:layout_span="2"
            android:textSize="10sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textColor="@android:color/holo_green_dark"
            />
    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/amlichngay"
            android:layout_span="8"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:fontFamily="sans-serif"
            android:textColor="@android:color/holo_green_dark"
            android:text="4"
            />
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/truoc"
            android:layout_span="2"
            android:textSize="8sp"
            android:text="Trước"

            />
        <Button
            android:id="@+id/sau"
            android:layout_span="2"
            android:textSize="10sp"
            android:text="Sau"
            />
        <EditText
            android:id="@+id/nhapthang"
            android:layout_span="1"
            android:textColorHighlight="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textColor="@android:color/holo_green_dark"
            android:hint="Tháng"
            />
        <EditText
            android:id="@+id/nhapngay"
            android:layout_span="1"
            android:textColorHighlight="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimary"
            android:fontFamily="sans-serif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_green_dark"
            android:hint="Ngày"
            />
        <Button
            android:id="@+id/tim"
            android:layout_span="2"
            android:textSize="8sp"
            android:text="Tìm"
            />
    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/page"
            android:layout_span="8"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:fontFamily="sans-serif"
            android:textColor="@android:color/holo_green_dark"
            android:text="0"
            />
    </TableRow>
</TableLayout>
